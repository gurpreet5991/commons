<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane id="loginScreen" styleClass="loginBorderPaneStyle" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.mosip.registration.controller.auth.LoginController">
	<top>
		<HBox id="header-section">
			<children>
				<Label id="header-text" text="%aboutus">
					<HBox.margin>
						<Insets left="35.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label id="header-text" text="%faq">
					<HBox.margin>
						<Insets left="40.0" top="10.0" />
					</HBox.margin>
				</Label>
				<Label id="header-text" text="%contact">
					<HBox.margin>
						<Insets left="40.0" top="10.0" />
					</HBox.margin>
				</Label>
			</children>
		</HBox>
	</top>
	<left>
		<AnchorPane styleClass="loginLeftPaneStyle">
			<children>
				<Label id="content" layoutY="33.0" styleClass="content-section" wrapText="true" AnchorPane.topAnchor="20.0">
					<font>
						<Font size="14.0" />
					</font>
					<padding>
						<Insets left="20.0" />
					</padding>
				</Label>
				<ImageView fitHeight="353.0" fitWidth="349.0" layoutX="20.0" layoutY="56.0" AnchorPane.bottomAnchor="48.0" AnchorPane.topAnchor="65.0">
					<image>
						<Image url="@../images/logo-final.png" />
					</image>
					<BorderPane.margin>
						<Insets left="10.0" />
					</BorderPane.margin>
					<VBox.margin>
						<Insets left="20.0" top="40.0" />
					</VBox.margin>
				</ImageView>
			</children>
			<BorderPane.margin>
				<Insets left="20.0" />
			</BorderPane.margin>
		</AnchorPane>
	</left>
	<center>
		<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="loginCenterPaneStyle">
			<children>
				<Label layoutX="106.0" layoutY="81.0" text="%registrationlogin" AnchorPane.leftAnchor="106.0" AnchorPane.topAnchor="81.0">
					<font>
						<Font size="23.0" />
					</font>
				</Label>
				<Label fx:id="bioText" layoutX="107.0" layoutY="121.0" styleClass="loginfpStyle" text="%withfingerprint" />
            <AnchorPane fx:id="userIdPane" layoutX="108.0" layoutY="153.0" prefHeight="150.0" prefWidth="200.0">
               <children>
      				<TextField fx:id="userId" layoutY="1.0" promptText="%username" styleClass="loginFieldStyle" AnchorPane.leftAnchor="0.0" />
                  <Button fx:id="submitUserId" layoutX="130.0" layoutY="75.0" mnemonicParsing="false" onAction="#validateUserId" styleClass="loginSubmitStyle" text="%submit" />
               </children>
            </AnchorPane>
            <AnchorPane fx:id="credentialsPane" layoutX="108.0" layoutY="153.0" prefHeight="172.0" prefWidth="228.0">
               <children>
      				<Button fx:id="getOTP" layoutY="75.0" mnemonicParsing="false" onAction="#generateOtp" styleClass="loginOtpStyle" text="%getotp" />
      				<Button fx:id="resend" layoutY="75.0" mnemonicParsing="false" onAction="#generateOtp" styleClass="loginResendOtpStyle" text="%resendotp" visible="false" />
      				<ImageView fx:id="bioImage" fitHeight="99.0" fitWidth="92.0" layoutX="2.0" pickOnBounds="true" preserveRatio="true" visible="false">
      					<image>
      						<Image url="@../images/fingerprint.jpg" />
      					</image>
      				</ImageView>
      				<Label fx:id="otpValidity" layoutY="145.0" styleClass="loginOtpValidStyle" text="%otp_validity_in_mins" />
      				<Button fx:id="submit" layoutX="130.0" layoutY="75.0" mnemonicParsing="false" onAction="#validateCredentials" styleClass="loginSubmitStyle" text="%submit" />
      				<PasswordField fx:id="password" layoutX="2.0" promptText="%password" styleClass="loginFieldStyle" AnchorPane.leftAnchor="2.0" />
               </children>
            </AnchorPane>
			</children>
		</AnchorPane>
	</center>
	<bottom>
		<HBox id="footer-section">
			<children>
				<Label text="%mosip.io" textAlignment="CENTER" />
			</children>
		</HBox>
	</bottom>
</BorderPane>
