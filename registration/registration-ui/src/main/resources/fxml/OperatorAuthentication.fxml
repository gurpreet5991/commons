<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.mosip.registration.controller.reg.OperatorAuthenticationController">
   <children>
      <AnchorPane fx:id="pwdBasedLogin" prefHeight="550.0" prefWidth="850.0" visible="false">
         <children>
            <Button layoutX="388.0" layoutY="244.0" mnemonicParsing="false" onAction="#validatePwd" text="Submit" />
            <TextField fx:id="username" layoutX="291.0" layoutY="122.0" prefHeight="39.0" prefWidth="274.0" promptText="Username" />
            <Label fx:id="passwdLabel" layoutX="316.0" layoutY="79.0" text="Registration Officer Verification" />
            <PasswordField fx:id="password" layoutX="291.0" layoutY="178.0" prefHeight="39.0" prefWidth="274.0" promptText="Password" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="otpBasedLogin" prefHeight="550.0" prefWidth="850.0" visible="false">
         <children>
            <Button layoutX="288.0" layoutY="237.0" mnemonicParsing="false" text="Get OTP" />
            <Label fx:id="otpLabel" layoutX="316.0" layoutY="72.0" text="Registration Officer Verification" />
            <Button layoutX="481.0" layoutY="237.0" mnemonicParsing="false" onAction="#validateOTP" text="Submit" />
            <TextField fx:id="otpUserId" layoutX="288.0" layoutY="120.0" prefHeight="39.0" prefWidth="274.0" promptText="Username" />
            <TextField fx:id="otp" layoutX="288.0" layoutY="173.0" prefHeight="39.0" prefWidth="274.0" promptText="Enter OTP" />
