node {

 def branch = '0.12.0_automationtests_kernel'
 def projectToBuild = 'automationtests'
 stage('------- Checkout --------') {
  // Checkout only automation tests Module
  dir(branch) {
   checkout([$class: 'GitSCM',
    branches: [
     [name: branch]
    ],
    userRemoteConfigs: [
     [url: 'https://github.com/mosip/mosip', credentialsId: '4c9741a2-4c15-4aad-a13d-3a1206u05321']
    ],
    extensions: [

     [$class: 'SparseCheckoutPaths', sparseCheckoutPaths: [
      [$class: 'SparseCheckoutPath', path: '/'+projectToBuild + '/']
     ]]

    ],
   ])
  }
 }


stage ('---------- mvn-clean-test ---------------') {
	  dir(branch+"/"+projectToBuild)
  {
	sh "/usr/local/maven/bin/mvn clean install -Dmaven.test.failure.ignore=true -Denv.user=${params.Environment} -Denv.endpoint=https://${params.Environment}.mosip.io -Denv.testLevel=smokeAndRegression"
			  
  }
  
  publishHTML(
   target:[
   allowMissing: false, 
   alwaysLinkToLastBuild: false, 
   keepAll: true, 
   reportDir: branch+"/"+projectToBuild+"/target/surefire-reports", 
   reportFiles: 'MOSIP_KernelAutoRun_TestNGReport.html', 
   reportName: 'HTML Report'
])
}
          recipients = "$env.AUTO_TEST_PREREG_LIST"
emailext ( 
	    attachmentsPattern:'**/surefire-reports/MOSIP_KernelAutoRun_TestNGReport.html',
	    subject: "MOSIP Jenkins Job $JOB_NAME with build no $BUILD_NUMBER'",
	    body: """<p>Check console output at <a href="$BUILD_URL">'${JOB_NAME}'</a></p>""",
	    to: "ravi.kant2@mindtree.com, arunakumar.rati@mindtree.com",
	    from: '"Jenkins" <info@mosip.io>'
	)


}
